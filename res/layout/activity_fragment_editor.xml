           
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="475dp"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".EditFragmentActivity" >

    <EditText
        android:id="@+id/fragmentTitle"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/fragmentTitleText"
        android:ems="10"
        android:hint="Title of Fragment" >

        <requestFocus />
    </EditText>

    <EditText
        android:id="@+id/idPageNum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/fragmentTitle"
        android:layout_centerHorizontal="true"
        android:ems="10"
        android:hint="ID/Page Number"
        android:inputType="number" />

    <TextView
        android:id="@+id/fragmentTitleText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:ems="10" />

    <ListView
        android:id="@+id/FragmentPartList"
        android:layout_width="wrap_content"
        android:layout_height="200dp"
        android:layout_alignLeft="@+id/fragmentTitle"
        android:layout_below="@+id/idPageNum" >
    </ListView>

    <HorizontalScrollView
        android:id="@+id/HorizontalScrollView01"
        android:layout_width="wrap_content"
        android:layout_height="170dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/FragmentPartList" >

        <LinearLayout
            android:layout_width="836dp"
            android:layout_height="198dp"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/viewImage"
                android:layout_width="340dip"
                android:layout_height="200dip"
                android:layout_weight="1"
                android:src="@android:drawable/ic_menu_gallery" />

            <ImageView
                android:id="@+id/viewImage2"
                android:layout_width="340dip"
                android:layout_height="200dip"
                android:layout_weight="1"
                android:src="@android:drawable/ic_menu_gallery" />

            <ImageView
                android:id="@+id/viewImage3"
                android:layout_width="340dip"
                android:layout_height="200dip"
                android:layout_weight="1"
                android:src="@android:drawable/ic_menu_gallery" />
        </LinearLayout>
    </HorizontalScrollView>

</RelativeLayout>